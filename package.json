{
  "name": "liberdus",
  "version": "2.3.0",
  "description": "Liberdus is a payment network that allows users to govern their own money system in a democratic fashion",
  "main": "dist/index.js",
  "scripts": {
    "build-client": "npm explore liberdus-web-client -- npm install && npm explore liberdus-web-client -- npm run build",
    "run-client": "npm explore liberdus-web-client -- npm start",
    "start-client": "shardus pm2 start npm -- run run-client",
    "stop-client": "shardus pm2 stop npm",
    "start": "(shardus clean || true) && npm run build-client && shardus start 10 && npm run start-client && echo \"\nmonitor:    http://localhost:3000\nweb-client: http://localhost:3333\nexplorer:   http://localhost:4444\"",
    "stop": "npm run stop-client && shardus stop",
    "test": "jest",
    "update-template": "node scripts/update-template.js",
    "update-docker": "node scripts/update-docker.js",
    "check": "gts check",
    "compile": "tsc -p .",
    "fix": "gts fix",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "",
    "dbg": "shardus start 3 && shardus stop && rm -rf instances/"
  },
  "author": "Kyle Shifflett",
  "license": "ISC",
  "dependencies": {
    "chalk-pipe": "^3.0.0",
    "decimal.js": "^10.2.0",
    "deepmerge": "^4.2.2",
    "dot-prop": "^5.1.1",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "fast-stable-stringify": "^1.0.0",
    "inquirer": "^7.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.24.0",
    "nodemailer": "^6.3.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "shardus-crypto-utils": "git+https://gitlab.com/shardus/shardus-crypto-utils.git#node-v16",
    "shardus-global-server": "git+https://gitlab.com/shardus/global/shardus-global-server.git#node-v16",
    "streamroller": "^2.2.3",
    "vorpal": "^1.12.0"
  },
  "devDependencies": {
    "@types/decimal.js": "^7.4.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.20.4",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "archive-server": "git+https://gitlab.com/shardus/archive/archive-server.git#node-v16",
    "axios": "^0.21.1",
    "cross-env": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "execa": "^4.0.1",
    "explorer-server": "git+https://gitlab.com/liberdus/explorer-server.git#node-v16",
    "gts": "^3.1.0",
    "hygen-create": "^0.2.1",
    "jest": "^26.6.3",
    "liberdus-web-client": "git+https://gitlab.com/liberdus/web-client/liberdus-web-client.git#node-v16",
    "monitor-server": "git+https://gitlab.com/shardus/monitor-server.git#semver:^2.0.0",
    "pm2": "^4.1.2",
    "prettier": "^1.19.1",
    "shardus": "^4.2.0",
    "shelljs": "^0.8.4",
    "standard": "^12.0.1",
    "ts-jest": "^26.5.2",
    "typescript": "^4.4.4",
    "yarpm": "^0.2.1"
  }
}
